<h1>Sign up</h1>
<%= form_with model: @user, url: sign_up_path do |form|%>
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message|%>
      <div><%=message%><div>
    <% end %>
  <% end %>

  <%= form.text_field :username, placeholder: "tanjona" %><br><br>
  <%= form.text_field :email, placeholder: "tanjona@gmail.com" %><br><br>
  <%= form.password_field :password, placeholder: "password" %><br><br>
  <%= form.password_field :password_confirmation, placeholder: "confirm password" %><br><br>
  <%= form.submit "sign up" %>
<% end %>
<br>

<%=link_to "go back home", root_path%>